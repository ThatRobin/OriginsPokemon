{
    "name": "Move learner",
    "description": "Learn a new move by finding and using a move knowledge book.",
    "type": "apoli:multiple",
    "choose": {
        "type": "apoli:active_self",
        "cooldown": 4,
        "entity_action": {
            "type": "apoli:if_else",
            "condition": {
                "type": "apoli:resource",
                "resource": "*:*_cool",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "apoli:and",
                "actions": [
                    {
                        "type": "apoli:execute_command",
                        "command": "function cobblemorigins:get_selected_move with storage cobblemorigins:moves"
                    },
                    {
                        "type": "apoli:execute_command",
                        "command": "function cobblemorigins:ask"
                    },
                    {
                        "type": "apoli:trigger_cooldown",
                        "power": "*:*_cool"
                    }
                ]
            },
            "else_action": {
                "type": "apoli:and",
                "actions": [
                    {
                        "type": "apoli:change_resource",
                        "resource": "*:learn_move_cool",
                        "operation": "set",
                        "change": 80
                    },
                    {
                        "type": "origins:revoke_all_powers",
                        "source": "cobblemorigins:move"
                    },
                    {
                        "type": "apoli:execute_command",
                        "command": "function cobblemorigins:get_name"
                    },
                    {
                        "type": "apoli:execute_command",
                        "command": "function cobblemorigins:remove_selected_move with storage cobblemorigins:moves"
                    },
                    {
                        "type": "apoli:execute_command",
                        "command": "data modify storage cobblemorigins:moves move set from entity @s SelectedItem.tag.move"
                    },
                    {
                        "type": "apoli:execute_command",
                        "command": "function cobblemorigins:new_move with storage cobblemorigins:moves"
                    },
                    {
                        "type": "apoli:execute_command",
                        "command": "function cobblemorigins:grant_move with storage cobblemorigins:moves"
                    },
                    {
                        "type": "apoli:equipped_item_action",
                        "equipment_slot": "mainhand",
                        "action": {
                            "type": "apoli:consume"
                        }
                    }
                ]
            }
        },
        "condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "origins:power",
                    "power": "*:status/repeating_move",
                    "source": "cobblemorigins:status",
                    "inverted": true
                },
                {
                    "type": "apoli:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "apoli:and",
                        "conditions": [
                            {
                                "type": "apoli:ingredient",
                                "ingredient": {
                                    "item": "knowledge_book"
                                }
                            },
                            {
                                "type": "apoli:nbt",
                                "nbt": "{hasMove:1b}"
                            }
                        ]
                    }
                }
            ]
        },
        "key": {
            "key": "key.use"
        }
    },
    "cool": {
        "type": "apoli:cooldown",
        "cooldown": 80,
        "hud_render": {
            "inverted": true,
            "should_render": true
        }
    },
    "prevent": {
        "type": "apoli:prevent_item_use",
        "item_condition": {
            "type": "apoli:and",
            "conditions": [
                {
                    "type": "apoli:ingredient",
                    "ingredient": {
                        "item": "knowledge_book"
                    }
                },
                {
                    "type": "apoli:nbt",
                    "nbt": "{hasMove:1b}"
                }
            ]
        }
    }
}